<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.anchronize.sudomap.NavigationDrawer.SettingActivity">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_textView"
                android:layout_width="137dp"
                android:layout_height="28dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Preferences"
                android:textStyle="bold"
                android:fontFamily="Myriad Pro"
                android:textColor="@color/white"
                android:shadowColor="@android:color/darker_gray"
                android:textSize="25dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="0dp"
                    android:src="@mipmap/miller"/>

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="200dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="200dp"
                    android:textStyle="bold"
                    android:text="Jeffrey Miller"/>

                <Button
                    android:id="@+id/change_pic_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="300dp"
                    android:text="Change Profile Picture"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:alpha="0.8"
                    android:textStyle="bold"
                    android:background="@drawable/button_border"/>

                <EditText
                    android:id="@+id/change_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Change name..."
                    android:layout_marginTop="428dp"
                    />

                <Button
                    android:id="@+id/change_name_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="470dp"
                    android:text="Change Name"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:alpha="0.8"
                    android:textStyle="bold"
                    android:background="@drawable/button_border"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


