<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.anchronize.sudomap.EventDetailActivity">
    <ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title placeholder"
                android:textSize="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/button_border"/>
            <fragment
                android:id="@+id/eventsMap"
                class="com.google.android.gms.maps.SupportMapFragment"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_below="@+id/eventTitle"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="15dp" />
            <TextView
                android:id="@+id/eventLocationNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Location name placeholder"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/button_border"
                android:layout_below="@+id/eventsMap"/>

            <TextView
                android:id="@+id/eventLocationAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Location address placeholder"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/button_border"
                android:layout_below="@+id/eventLocationNameTextView"/>
            <RelativeLayout
                android:id="@+id/descriptionContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="1dp"
                android:layout_below="@+id/eventLocationAddressTextView"
                android:background="@drawable/button_border">
                <TextView
                    android:id="@+id/descriptionLabel"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textSize="15dp"
                    android:textColor="@color/common_google_signin_btn_text_light"
                    android:text="Description:"/>
                <TextView
                    android:id="@+id/eventDescriptionView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Description placeholder"
                    android:textColor="#000000"
                    android:layout_below="@+id/descriptionLabel"/>
            </RelativeLayout>
            <HorizontalScrollView
                android:id="@+id/attendantsScrollView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/descriptionContainer"
                android:background="@drawable/button_border"/>
            <Button
                android:id="@+id/chatButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="CHAT"
                android:textSize="40dp"
                android:backgroundTint="@color/white"
                android:layout_below="@+id/attendantsScrollView"
                android:layout_marginTop="15dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
