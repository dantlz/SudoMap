<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.anchronize.sudomap.EventDetailActivity">
    <ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title placeholder"
                android:textSize="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/button_border"/>
            <TextView
                android:id="@+id/organizerInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organizer Placeholder"
                android:textSize="20dp"
                android:layout_below="@+id/eventTitle"/>
            <RelativeLayout
                android:id="@+id/eventButtons"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/organizerInfo"
                android:layout_marginTop="15dp">
                <Button
                    android:id="@+id/bookmarkButton"
                    android:text="Bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="46dp" />
                <Button
                    android:id="@+id/attendingButton"
                    android:text="Attending"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/bookmarkButton"
                    android:layout_marginStart="36dp" />
            </RelativeLayout>
            <fragment
                android:id="@+id/eventsMap"
                class="com.google.android.gms.maps.SupportMapFragment"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_below="@+id/eventButtons"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="15dp" />
            <TextView
                android:id="@+id/locationLabel"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:text="Location:"
                android:layout_below="@id/eventsMap"/>
            <TextView
                android:id="@+id/eventLocationNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Location name placeholder"
                android:padding="10dp"
                android:background="@drawable/button_border"
                android:layout_below="@+id/locationLabel"/>
            <TextView
                android:id="@+id/addressLabel"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:text="Street Address:"
                android:layout_below="@id/eventLocationNameTextView"/>
            <TextView
                android:id="@+id/eventLocationAddressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Location address placeholder"
                android:padding="10dp"
                android:background="@drawable/button_border"
                android:layout_below="@+id/addressLabel"/>
            <TextView
                android:id="@+id/descriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/eventLocationAddressTextView"
                android:textColor="@color/common_google_signin_btn_text_light"
                android:text="Description:"/>
            <TextView
                android:id="@+id/eventDescriptionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Description placeholder"
                android:textColor="#000000"
                android:padding="10dp"
                android:layout_below="@+id/descriptionLabel"
                android:background="@drawable/button_border" />
            <TextView
                android:id="@+id/attendantsLabel"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:text="Attendants:"
                android:layout_below="@id/eventDescriptionView"/>
            <HorizontalScrollView
                android:id="@+id/attendantsScrollView"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:padding="5dp"
                android:layout_below="@+id/attendantsLabel"
                android:background="@drawable/button_border">
                <LinearLayout
                    android:id="@+id/attendants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
            <Button
                android:id="@+id/chatButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="CHAT"
                android:textSize="40dp"
                android:backgroundTint="@color/white"
                android:layout_below="@+id/attendantsScrollView"
                android:layout_marginTop="15dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
