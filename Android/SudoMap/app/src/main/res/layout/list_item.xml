<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/list_item_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUTHOR"
        android:id="@+id/list_item_author"
        android:layout_toEndOf="@+id/list_item_thumbnail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is row number 15"
        android:id="@+id/list_item_text"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@+id/list_item_thumbnail"
        android:layout_toEndOf="@+id/list_item_thumbnail" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="0"
        android:layout_marginTop="45dp"
        android:id="@+id/list_item_counter"
        android:layout_marginLeft="320dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-5dp"
        android:background="@drawable/arrow_up"
        android:id="@+id/list_item_btn_up"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        android:rotation="180"
        android:background="@drawable/arrow_up"
        android:id="@+id/list_item_btn_down"/>
</RelativeLayout>